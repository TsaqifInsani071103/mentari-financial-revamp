<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mentarirvmp.controllers.IndivProjectViewController" styleClass="content-area" spacing="10">
    <!-- HBox for Label and Buttons -->
    <HBox spacing="10"> <!-- Add spacing as needed -->
        <Label fx:id="projectName" text="Pie Chart Placeholder" styleClass="content-area-label"/>
    </HBox>

    <!-- ScrollPane for Statement View -->
    <ScrollPane fitToWidth="true" fitToHeight="true" fx:id="numbersContainer" VBox.vgrow="ALWAYS">
        <!-- Set VBox.vgrow to ALWAYS for the ScrollPane to grow with the VBox -->
    </ScrollPane>
</VBox>
